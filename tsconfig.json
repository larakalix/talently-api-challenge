{
    "compilerOptions": {
        "target": "ES2019",
        "module": "commonjs",
        "lib": ["ESNext"],
        "outDir": "dist",
        "rootDir": "src",
        "baseUrl": "./src",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "paths": {
            "*": ["*", "src/*"]
        }
    },
    "include": ["src/**/*"]
}
