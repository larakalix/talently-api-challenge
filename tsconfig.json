{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist"
    },
    "include": ["./*.js", "src/**/*.ts", "api/**/*.ts", "test/**/*.ts"]
}
